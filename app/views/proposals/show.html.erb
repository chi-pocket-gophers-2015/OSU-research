<%= render "partials/header_bar" %>
<h1> Proposal</h1>

<h4> Details for this proposal<h4>


<h1 class="title">
	<%= @proposal.title %>
</h1>

<p class="date">
	Submitted <%= time_ago_in_words(@proposal.created_at) %> ago
</p>

<p class="body">
		Hypothesis: <%= @proposal.hypothesis %><br><br>

		Summary: <%= @proposal.summary %>
</p>

<p class="status">
		<% if @proposal.active == true %>
			<form class="new-experiment-button" method="get" action="/experiments/new">
				<input type="hidden" name="proposal_id" value=<%=@proposal.id%>>
				<input type="submit" value = "Click here to create an experiment on this proposal.">
			</form>
		<% else %>
			Status: Closed
		<% end %>
</p>



