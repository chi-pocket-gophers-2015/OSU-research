<div id="new_user_page">

  <% if @errors %>
    <div id="errors">
      <h2><%= pluralize(@errors.count, "error") %> prevented this post from saving</h2>
      <ul>
        <% @errors.each do |msg| %>
          <li><%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  Welcome, new user!
  <%= form_for(@user) do |f| %>
    <div class="input_field"><%= f.label :email %>
    <%= f.email_field :email, autofocus: true %></div>

    <div class="input_field"><%= f.label :username %>
    <%= f.text_field :username %></div>

    <div class="input_field"><%= f.label :password %>
    <%= f.password_field :password %></div>

    <div class="input_field"><%= f.label :secret_code %>
    <%= f.password_field :secret_code %></div>

    <div class="submit"><%= f.submit "Submit" %></div>
  <% end %>




</div>
