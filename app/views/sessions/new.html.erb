<div id="log_in_page">

  <% if @errors %>
    <div id="errors">
      <h2><%= pluralize(@errors.count, "error") %> prevented this post from saving</h2>
      <ul>
        <% @errors.each do |msg| %>
          <li><%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Please Log In</h2>
  <%= form_for(:session, url: '/sessions') do |f| %>
    <div class="input_field"><%= f.label :username %>
    <%= f.text_field :username %></div>

    <div class="input_field"><%= f.label :password %>
    <%= f.password_field :password %></div>

   	<div class="submit"><%= f.submit "Submit" %></div>
  <% end %>
  <br><br>
  Or <%=link_to "Sign Up", new_user_path%>


</div>

